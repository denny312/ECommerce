@model IEnumerable<ECommerce.Models.Rasoi>
@{
    ViewData["Title"] = "Pagina di Benvenuto";
}

<style>
    :root {
        --primary-chrome: #2c3e50;
        --secondary-chrome: #34495e;
        --accent-chrome: #5d6d7e;
        --light-chrome: #bdc3c7;
        --dark-chrome: #1a252f;
        --text-light: #ecf0f1;
        --text-dark: #2c3e50;
        --card-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        --chrome-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    * {
        transition: all 0.3s ease;
    }

    body.dark-mode {
        background: linear-gradient(135deg, var(--dark-chrome) 0%, var(--primary-chrome) 100%);
        color: var(--text-light);
        min-height: 100vh;
    }

    body.light-mode {
        background: linear-gradient(135deg, #f8f9fa 0%, var(--light-chrome) 100%);
        color: var(--text-dark);
        min-height: 100vh;
    }

    .theme-switch {
        position: fixed;
        bottom: 20px;
        right: 20px;
        z-index: 999;
        display: flex;
        align-items: center;
        gap: 10px;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 20px;
        padding: 6px 15px;
        box-shadow: var(--card-shadow);
        font-size: 0.85rem; /* rimpicciolisco un po' il testo */
    }

    .theme-label {
        font-size: 12px; /* testo più piccolo */
        font-weight: 500;
        margin: 0;
        opacity: 0.8;
    }

    /* Riduci un po' la dimensione dello switch */
    .toggle-switch {
        width: 50px;
        height: 25px;
        border-radius: 12.5px;
        border: 2px solid var(--accent-chrome);
        box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.2);
    }

        .toggle-switch::before {
            width: 18px;
            height: 18px;
            top: 3.5px;
            left: 3.5px;
        }
        .toggle-switch.active {
            background: var(--accent-chrome);
        }

            .toggle-switch.active::before {
                transform: translateX(25px);
            }

    .main-content {
        margin-top: 80px;
        padding: 2rem;
    }

    .welcome-header {
        text-align: center;
        margin-bottom: 3rem;
    }

        .welcome-header h1 {
            font-size: 3.5rem;
            font-weight: 700;
            background: var(--chrome-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 0.5rem;
        }

        .welcome-header p {
            font-size: 1.2rem;
            opacity: 0.8;
        }

    .card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 1rem;
        box-shadow: var(--card-shadow);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        width: 100%;
        max-width: 350px;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
        }

    .dark-mode .card {
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(255, 255, 255, 0.1);
    }

    .light-mode .card {
        background: rgba(255, 255, 255, 0.8);
        border-color: rgba(0, 0, 0, 0.1);
    }

    .card-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
        justify-items: center;
    }

    .card h5 {
        color: transparent;
        background: var(--chrome-gradient);
        -webkit-background-clip: text;
        background-clip: text;
        font-weight: 600;
        margin-bottom: 1rem;
        font-size: 1.3rem;
    }

    .price {
        font-size: 1.4rem;
        font-weight: 700;
        color: #27ae60;
        margin-bottom: 0.5rem;
    }

    .product-type {
        opacity: 0.7;
        font-style: italic;
        font-size: 1rem;
    }

    .empty-state {
        text-align: center;
        padding: 3rem;
        opacity: 0.6;
    }

        .empty-state h3 {
            margin-bottom: 1rem;
            font-size: 2rem;
        }

    /* Stile alternativo per lo switch - più semplice */
    .toggle-switch-alt {
        position: relative;
        width: 80px;
        height: 40px;
        background: var(--secondary-chrome);
        border-radius: 20px;
        cursor: pointer;
        border: 2px solid var(--accent-chrome);
        box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.2);
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 8px;
        font-size: 12px;
        color: var(--text-light);
    }

        .toggle-switch-alt::before {
            content: '';
            position: absolute;
            top: 3px;
            left: 3px;
            width: 32px;
            height: 32px;
            background: var(--chrome-gradient);
            border-radius: 50%;
            transition: transform 0.3s ease;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
            z-index: 1;
        }

        .toggle-switch-alt.active::before {
            transform: translateX(40px);
        }

        .toggle-switch-alt .icon {
            font-size: 14px;
            z-index: 2;
        }

    /* Media queries corrette */
    @@media screen and (max-width: 768px) {
        .theme-switch

    {
        top: 10px;
        left: 10px;
        padding: 8px 15px;
    }

    .welcome-header h1 {
        font-size: 2.5rem;
    }

    .card-container {
        grid-template-columns: 1fr;
        gap: 1rem;
    }

    .main-content {
        padding: 1rem;
    }

    }

    @@media screen and (max-width: 480px) {
        .theme-switch

    {
        position: relative;
        top: 0;
        left: 0;
        margin: 1rem;
        width: fit-content;
    }

    .welcome-header h1 {
        font-size: 2rem;
    }

    .main-content {
        margin-top: 20px;
    }

    }
</style>

<div class="theme-switch">
    <p class="theme-label">Modalità Notte</p>
    <!-- Switch normale -->
    <div class="toggle-switch" id="toggle-theme"></div>

    <!-- Switch alternativo con icone (commenta quello sopra e scommenta questo se preferisci) -->
    <!--
    <div class="toggle-switch-alt" id="toggle-theme">
        <span class="icon">🌙</span>
        <span class="icon">☀️</span>
    </div>
    -->
</div>

<div class="main-content">
    <div class="welcome-header">
        <h1>Benvenuto</h1>
        <p>Scopri i nostri rasoi in catalogo</p>
    </div>

    <div class="card-container">
        @if (Model != null && Model.Any())
        {
            @foreach (var prodotto in Model)
            {
                <div class="card">
                    <h5>@prodotto.Marca - @prodotto.Modello</h5>
                    <p class="price">€@prodotto.Prezzo</p>
                    <p class="product-type">Tipo: @prodotto.Tipo</p>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <h3>Nessun prodotto disponibile</h3>
                <p>Al momento non ci sono rasoi nel catalogo.</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        const toggleBtn = document.getElementById("toggle-theme");
        const body = document.body;
        const themeLabel = document.querySelector(".theme-label");

        // Inizializza il tema
        let currentTheme = "dark";

        function updateTheme() {
            if (currentTheme === "dark") {
                body.classList.remove("light-mode");
                body.classList.add("dark-mode");
                toggleBtn.classList.remove("active");
                themeLabel.textContent = "Modalità Notte";
            } else {
                body.classList.remove("dark-mode");
                body.classList.add("light-mode");
                toggleBtn.classList.add("active");
                themeLabel.textContent = "Modalità Giorno";
            }
        }

        // Event listener più robusto
        if (toggleBtn) {
            toggleBtn.addEventListener("click", function(e) {
                e.preventDefault();
                currentTheme = currentTheme === "dark" ? "light" : "dark";
                updateTheme();
            });
        }

        // Inizializza il tema al caricamento della pagina
        document.addEventListener("DOMContentLoaded", function() {
            updateTheme();
        });
    </script>
}